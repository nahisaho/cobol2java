  "author": "nahisaho",
  "repository": {
    "type": "git",
    "url": "https://github.com/nahisaho/cobol2java.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/nahisaho/cobol2java#readme",
  "bugs": {
    "url": "https://github.com/nahisaho/cobol2java/issues"
