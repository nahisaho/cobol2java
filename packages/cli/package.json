{
  "name": "cobol2java-cli",
  "version": "1.0.0",
  "description": "CLI for COBOL to Java conversion",
  "type": "module",
  "bin": {
    "cobol2java": "./dist/bin/cobol2java.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "bin"],
  "scripts": {
