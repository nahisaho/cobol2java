{
  "name": "cobol2java-vscode",
  "displayName": "COBOL2Java",
  "description": "Convert COBOL source code to Java with GitHub Copilot LLM assistance",
  "version": "0.1.0",
  "publisher": "cobol2java",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/cobol2java"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "cobol",
    "java",
    "converter",
    "migration",
    "copilot",
    "llm"
  ],
  "activationEvents": [
    "onLanguage:cobol",
    "onCommand:cobol2java.convert"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cobol2java.convert",
        "title": "Convert COBOL to Java",
        "category": "COBOL2Java"
      },
      {
        "command": "cobol2java.convertWithCopilot",
        "title": "Convert COBOL to Java (with Copilot)",
        "category": "COBOL2Java"
      },
      {
        "command": "cobol2java.validate",
        "title": "Validate COBOL Source",
        "category": "COBOL2Java"
      },
      {
        "command": "cobol2java.previewStatement",
        "title": "Preview Statement as Java",
        "category": "COBOL2Java"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cobol2java.convert",
          "when": "resourceExtname == .cbl || resourceExtname == .cob || resourceExtname == .cobol",
          "group": "cobol2java"
        },
        {
          "command": "cobol2java.convertWithCopilot",
          "when": "resourceExtname == .cbl || resourceExtname == .cob || resourceExtname == .cobol",
          "group": "cobol2java"
        }
      ],
      "explorer/context": [
        {
          "command": "cobol2java.convert",
          "when": "resourceExtname == .cbl || resourceExtname == .cob || resourceExtname == .cobol",
          "group": "cobol2java"
        }
      ]
    },
    "configuration": {
      "title": "COBOL2Java",
      "properties": {
        "cobol2java.packageName": {
          "type": "string",
          "default": "com.example",
          "description": "Default Java package name for generated code"
        },
        "cobol2java.springBoot": {
          "type": "boolean",
          "default": false,
          "description": "Generate Spring Boot compatible code"
        },
        "cobol2java.copilotModel": {
          "type": "string",
          "default": "gpt-4o",
          "enum": ["gpt-4o", "gpt-4", "gpt-3.5-turbo"],
          "description": "GitHub Copilot model to use for LLM-assisted conversion"
        },
        "cobol2java.outputDirectory": {
          "type": "string",
          "default": "./output",
          "description": "Default output directory for converted Java files"
        }
      }
    },
    "languages": [
      {
        "id": "cobol",
        "aliases": ["COBOL", "cobol"],
        "extensions": [".cbl", ".cob", ".cobol", ".cpy"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -watch -p tsconfig.json",
    "lint": "eslint src --ext ts",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.95.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^3.2.0"
  },
  "dependencies": {
    "@cobol2java/core": "workspace:*"
  }
}
