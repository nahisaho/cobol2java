{
  "name": "cobol2java-core",
  "version": "1.0.0",
  "description": "Core COBOL to Java conversion library",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "typescript": "^5.4.0"
  },
  "keywords": [
    "cobol",
    "java",
    "converter",
    "transpiler",
    "migration",
    "legacy",
    "mainframe"
  ],
  "license": "MIT",
  "author": "nahisaho",
  "repository": {
    "type": "git",
    "url": "https://github.com/nahisaho/cobol2java.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/nahisaho/cobol2java#readme",
  "bugs": {
    "url": "https://github.com/nahisaho/cobol2java/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "glob": "^13.0.0"
  }
}
